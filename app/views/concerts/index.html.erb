<h1>コンサート一覧</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>日付</th>
    <th>演奏者</th>
    <th>施設</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @concerts.each do |concert| %>
    <% performer = Performer.find_by(id: concert.performer_id) %>
    <% audience = Audience.find_by(id: concert.audience_id) %>
      <tr>
        <td><%= concert.id %></td>
        <td><%= concert.date %></td>
        <td><%= performer.name %></td>
        <td><%= audience.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>
